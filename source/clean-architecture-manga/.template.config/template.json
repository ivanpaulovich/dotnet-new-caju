      "onlyIf": [
        {
          "after": "\"skip-restore\": \""
        }
      ]
    },
    "Basic": {
      "type": "computed",
      "value": "(use-cases == \"basic\")"
    },
    "ReadOnly": {
      "type": "computed",
      "value": "(use-cases == \"readonly\")"
    },
    "Full": {
      "type": "computed",
      "value": "(use-cases == \"full\")"
    },
    "CloseAccount": {
      "type": "computed",
      "value": "(Full)"
    },
    "Deposit": {
      "type": "computed",
      "value": "(Full)"
